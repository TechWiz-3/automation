#!/bin/bash

blue=$(tput setaf 51)
reset=$(tput sgr0)
purple=$(tput setaf 201)
blueypurple=$(tput setaf 111)

colon="${blueypurple}:"
forward_slash="${purple}/"

echo -e "
      ${purple}___                   ${blue}name${reset}        ${purple}${reset}  zac the wise
     ${forward_slash}\__\                  ${blue}age${purple}         ${purple}${reset}  young
    ${forward_slash}${colon}:${purple}|  |                 ${blue}langs${reset}       ${purple}${reset}  py, sh
   ${forward_slash}${colon}${forward_slash}${blueypurple}:${purple}|  |                 ${blue}edu${reset}         ${purple}${reset}  tafe nsw
  ${forward_slash}${colon}${forward_slash}|${blueypurple}:${purple}|  |__               ${blue}kn${reset}          ${purple}歷${reset} networking,
 ${forward_slash}${colon}${forward_slash} |${blueypurple}:${purple}| /\__\\                          ${purple}${reset}  cloud,
 ${purple}\/__|${colon}${purple}|/${blueypurple}:${forward_slash}  /                          ${purple}${reset}  linux,
     ${purple}|${colon}${forward_slash}${colon}${forward_slash}  /                           ${purple}${reset}  hardware
     ${purple}|${colon}:${forward_slash}  /                ${blue}os${reset}          ${purple}${reset}  PogOS
     ${purple}|${colon}${forward_slash}  /                 ${blue}todo${reset}        ${purple}${reset}  java, tts, image recog
     ${purple}|/__/   ${reset} 
"